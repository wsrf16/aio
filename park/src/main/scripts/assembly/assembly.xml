<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0
          http://maven.apache.org/xsd/assembly-2.0.0.xsd
          http://maven.apache.org/ASSEMBLY/2.0.0 ">
<!--    <id>${profiles.active}</id>-->
    <id>package</id>
    <formats>
        <!--<format>dir</format>-->
        <!--<format>zip</format>-->
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- 打包项目本身编译出来的jar文件 -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- 打包resources下的配置文件 -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>${project.deploy.directoryName.profile}</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>static/**</include>
                <include>templates/**</include>
                <include>**/*</include>
            </includes>
        </fileSet>
        <!-- 打包profile下的配置文件 -->
        <fileSet>
            <directory>${project.basedir}/src/main/profiles/${profiles.active}</directory>
            <!--<directory>${project.build.outputDirectory}/conf</directory>-->
            <outputDirectory>${project.deploy.directoryName.profile}</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <!-- 打包lib下的依赖文件 -->
        <!--<fileSet>-->
            <!--<directory>${project.build.outputDirectory}/lib</directory>-->
            <!--<outputDirectory>lib</outputDirectory>-->
        <!--</fileSet>-->

        <!--Dockerfile-->
        <fileSet>
            <directory>${project.basedir}/docker</directory>
            <outputDirectory>docker</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <!-- 打包scripts下的文件 -->
        <fileSet>
            <directory>${project.build.scriptSourceDirectory}/root</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.scriptSourceDirectory}/dynamic/jav</source>
            <outputDirectory></outputDirectory>
            <destName>jav</destName>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.build.scriptSourceDirectory}/dynamic/jav</source>
            <outputDirectory></outputDirectory>
            <destName>${project.build.finalName}.jar.sh</destName>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.build.scriptSourceDirectory}/dynamic/jav</source>
            <outputDirectory>bin</outputDirectory>
            <destName>launch.sh</destName>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${project.deploy.directoryName.dependency}</outputDirectory>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>