            <!--<charset>UTF-8</charset>-->
        <!--</encoder>-->
        <!--<filter class="ch.qos.logback.classic.filter.ThresholdFilter">-->
            <!--<level>DEBUG</level>-->
        <!--</filter>-->
    <!--</appender>-->

    <root level="INFO">
        <appender-ref ref="STD_OUT"/>
        <!--<appender-ref ref="ROLE_FILE_LOG"/>-->
    </root>

    <logger name="com.taoche.db.master.dao" level="debug" />
</configuration>