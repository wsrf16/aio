            <!--<appender-ref ref="consolePrint"/>-->
        <!--</Logger>-->
        <Root level="info">
            <AppenderRef ref="CONSOLE_APPENDER"/>
            <!--<AppenderRef ref="FILE_APPENDER"/>-->
            <!--<AppenderRef ref="ROLLING_FILE_APPENDER"/>-->
            <AppenderRef ref="LOGMGR_FILE_APPENDER"/>
        </Root>
    </Loggers>
</Configuration>